<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name = "NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="GameTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/lightBlue</item>
        <item name="android:textSize">80dp</item>
        <item name="android:padding">2dip</item>
    </style>

    <style name="TimerStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/lightBlue</item>
        <item name="android:textSize">35dp</item>
        <item name="android:padding">2dip</item>
    </style>

    <style name="TimePassedStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/red</item>
        <item name="android:textSize">80dp</item>
        <item name="android:padding">2dip</item>
    </style>

    <style name="GiveUpStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/red</item>
        <item name="android:textSize">80dp</item>
        <item name="android:padding">2dip</item>
    </style>

</resources>
