<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#f3ae1b" />
            <stroke android:width="5dp" android:color="#bb6008" />
            <corners android:radius="3dp" />
            <padding android:left="30dp" android:top="30dp" android:right="30dp" android:bottom="30dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FFC107"
                android:endColor="#FFC107"
                android:angle="270" />
            <stroke
                android:width="5dp"
                android:color="#607D8B" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="30dp"
                android:top="30dp"
                android:right="30dp"
                android:bottom="30dp" />
        </shape>
    </item>
</selector>