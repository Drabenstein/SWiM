<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="ActionModeTheme" parent="AppTheme">
        <item name="actionModeStyle">@style/AppTheme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionMenuTextColor">#ffffff</item>
    </style>

    <style name="changedFont">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">60dp</item>
        <item name="android:padding">2dip</item>
    </style>

    <style name="smallFont">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="normalFont">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="largeFont">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="redFont">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="limeFont">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/lime</item>
    </style>

    <style name="whiteFont">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
